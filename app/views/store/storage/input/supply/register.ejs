<html>
  <head id="head">
    <% include ./../../../../partials/head %>
  </head>
  <body>
    <!-- Header -->
      <header id="header" class="alt">
        <div class='logo'>
          <a href='/'>J.A Rio militar</a>
        </div>
        <a onclick="var r = confirm('deseja sair?');if(r==true){window.location.href='/logout'}">log-out</a>
        <a href='#menu'>Menu</a>
      </header>

    <!-- Nav -->
    <% include ./../../../../partials/nav %>

    <!-- One -->
      <section id="One" class="wrapper style3">
        <div class="inner">
          <header class="align-center">
            <br>
            <p>Controle de</p>
            <h3>Produção</h3>
          </header>
        </div>
      </section>

       <section id="one" class="wrapper style2">
        <div class="inner">

          <div>
            <div class="box">
              <div class="content">
                <header class="align-center">
                  <p>Registrar pedido de</p>
                  <h4>Abastecimento</h4>
                  <br>
                  <div class="row uniform">
                    <div class="4u 12u$(xsmall)">
                      <form id="product-form-filter">
                        <select id="get-type">
                          <option value="0">Tipo</option>
                          <option value="colete">Colete</option>
                          <option value="pecamodular">Peça modular</option>
                          <option value="coldre">Coldre</option>
                          <option value="bornal">Bornal</option>
                        </select>
                      </div>
                      <div class="4u 12u$(xsmall)">
                        <select id="get-color">
                          <option value="0">Cor</option>
                          <option value="pt">Preto</option>
                          <option value="vd">Verde</option>
                          <option value="tan">Tan</option>
                          <option value="cpt">Camo preto</option>
                          <option value="cvd">Camo verde</option>
                        </select>
                      </div>
                      <div class="4u 12u$(xsmall)">
                        <button type="submit" class="button xsmall alt" style="width:140px">Filtrar</button>
                      </div>
                    </form>
                  </div>
                    <br>

                    <div class="row uniform">
                  <div class="4u 12u$(xsmall)">
                    <select name="product" id="product">
                      <option value="0">Produto</option>
                    </select>
                  </div>
                  <div class="4u 12u$(xsmall)">
                    <input type="number" name="amount" id="amount" class="button big alt" placeholder="Quantidade">
                  </div>
                  <div class="4u 12u$(xsmall)">
                    <input type="button" id="add-product-btn" class="button alt" value="add produto">
                  </div>
                    <br>
                </div>
                <br>
                      <!-- Devolução do wpp com os dados do cliente, cpf, telefone, endereço -->
                <textarea id="obs" name="obs" placeholder="Observações"></textarea>
                <p></p>
                <br>
                <table>
                  <thead>
                    <tr>
                      <td>Produto Info</td>
                      <td>Quantidade</td>
                    </tr>
                  </thead>
                  <tbody id="main-supply-tbody">
                    
                  </tbody>
                </table>
                <p></p>
                <br>
                <input type="button" id="create-store-supply-btn" class="button alt" value="cadastrar">
              </header>
            </div>
          </div>
        </div>

        </div>
      </section>
    <!-- Footer -->
    <footer>
      <% include ./../../../../partials/footer %>
    </footer>
  </body>
</html>