        <div class="inner">
          <header class="align-center">
            <br>
            <p>Administração</p>
          </header>
        </div>
      </section>

      <section id="one" class="wrapper style2">
        <div class="inner">

          <div class="box">
            <div class="content">
              <header class="align-center">
                <select id="selectFactoryReport" autocomplete="off">
                  <option value="0">Selecionar relatório</option>
                  <option value="production">Produção</option>
                  <option value="sale">Vendas</option>
                </select>
              </header>
            </div>
          </div>

          <div class="box" id="productionBox" style="display:none;">
              
            <div class="content">
              <header class="align-center">
                <div class="row uniform">
                  <div class="4u 12u$(xsmall)">
                    <select id="production-report-month" autocomplete="off">
                      <option value="0">Selecione o mês</option>
                      <option value="1">Janeiro</option>
                      <option value="2">Fevereiro</option>
                      <option value="3">Março</option>
                      <option value="4">Abril</option>
