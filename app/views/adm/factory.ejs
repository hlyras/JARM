                    </table>
                  <div class="align-center">
                    <br>
                    <button id="productProductionPrevious" class="button small alt" autocomplete="off" disabled>&lsaquo;&lsaquo;</button>
                    <span id="productProductionPageNumber"></span>
                    <button id="productProductionNext" class="button small alt" autocomplete="off" disabled>&rsaquo;&rsaquo;</button>
                  </div>
                </div>
                <div class="6u 12u$(xsmall)">
                  <p>Relatório de produção</p>
