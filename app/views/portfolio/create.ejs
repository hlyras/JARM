<html>
  <head id="head">
    <% include ../partials/head %>
  </head>
  <body>
    <!-- Header -->
      <header id="header" class="alt">
        <div class='logo'>
          <a href='/'>J.A Rio militar</a>
        </div>
        <a onclick="var r = confirm('deseja sair?');if(r==true){window.location.href='/logout'}">log-out</a>
        <a href='#menu'>Menu</a>
      </header>

    <!-- Nav -->
    <% include ../partials/nav %>

    <!-- One -->
      <section id="One" class="wrapper style3">
        <div class="inner">
          <header class="align-center">
            <br>
            <p>Menu de controle dos</p>
            <h3>Produtos em estoque</h3>
          </header>
        </div>
      </section>

      <section id="one" class="wrapper style2">
        <div class="inner">
          <div class="grid-style">

            <div>
              <div class="box">
                <div class="content">
                  <header class="align-center">
                    <p>Produtos para</p>
                    <h4>Estoque</h4>
                    <div class="row uniform">
                      <div class="4u 12u$(xsmall)">
                        <form action="/saveProduct" method="POST" autocomplete="off">
                          <input type="hidden" name="id" id="id" value="">
                          <input type="text" name="cod" id="cod" placeholder="Código">
                        </div>
                        <div class="4u 12u$(xsmall)">
                          <select name="tipo" id="tipo">
                            <option value="0">Tipo</option>
                            <option value="colete">Colete</option>
                            <option value="pecamodular">Peça modular</option>
                            <option value="coldre">Coldre</option>
                            <option value="bornal">Bornal</option>
                          </select>
                        </div>
                        <div class="4u 12u$(xsmall)">
                          <select name="cor" id="cor">
                            <option value="0">Cor</option>
                            <option value="pt">Preto</option>
                            <option value="vd">Verde</option>
                            <option value="tan">Tan</option>
                            <option value="cpt">Camo preto</option>
                            <option value="cvd">Camo verde</option>
                          </select>
                        </div>
                    </div>
                    <br>
                    <div class="row uniform">
                      <div class="8u 12u$(xsmall)">
                        <input type="text" name="nome" id="nome" placeholder="Nome">
                      </div>
                      <div class="4u 12u$(xsmall)">
                        
                      </div>
                        <br>
                    </div>
                        <br>
                        <button type="submit" class="button alt">Cadastrar</button>
                      </form>
                  </header>
                </div>
              </div>
            </div>

            <div>
              <div class="box">
                <div class="content">
                  <header class="align-center">
                    <h4>Produtos cadastrados no estoque</h4>
                    <div class="row uniform">
                      <div class="4u 12u$(xsmall)">
                        <form id="filter-form">
                          <select id="src_tipo">
                            <option value="0">Tipo</option>
                            <option value="colete">Colete</option>
                            <option value="pecamodular">Peça modular</option>
                            <option value="coldre">Coldre</option>
                            <option value="bornal">Bornal</option>
                          </select>
                        </div>
                        <div class="4u 12u$(xsmall)">
                          <select id="src_cor">
                            <option value="0">Cor</option>
                            <option value="preto">Preto</option>
                            <option value="verde">Verde</option>
                            <option value="tan">Tan</option>
                            <option value="camufladoVd">Camo verde</option>
                            <option value="camufladoPt">Camo preto</option>
                          </select>
                        </div>
                        <div class="4u 12u$(xsmall)">
                          <button type="submit" class="button xsmall alt">Filtrar</button>
                        </div>
                      </form>
                    </div>
                    <br>
                    <table>
                      <thead>
                        <tr>
                          <td>Cod</td>
                          <td>Tipo</td>
                          <td>Nome</td>
                          <td>Cor</td>
                          <td>Qtd</td>
                        </tr>
                      </thead>
                      <tbody>
                        
                      </tbody>
                    </table>
                  </header>
                </div>
              </div>
            </div>

          </div>
        </div>
      </section>
    <!-- Footer -->
    <footer>
      <% include ../partials/footer %>
    </footer>
    <script src="javascripts/product-scripts.js" type="text/javascript"></script>
  </body>
</html>